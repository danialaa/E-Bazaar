<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ugrf">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-feature android:name="android.hardware.camera.ar" android:required="true"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".views.activities.NewItemDetailsActivity"></activity>
        <activity android:name=".views.activities.ItemVideoActivity" />
        <activity android:name=".views.activities.ARActivity" />
        <activity android:name=".views.activities.ShopItemsActivity" />
        <activity android:name=".views.activities.MarketShopsActivity" />
        <activity android:name=".views.activities.ProfileActivity" />
        <activity android:name=".views.activities.ItemsActivity" />
        <activity android:name=".views.activities.SellerDashboardActivity" />
        <activity android:name=".views.activities.BuyerDashboardActivity" />
        <activity android:name=".views.activities.ListActivity" />
        <activity android:name=".views.activities.RegisterActivity" />
        <activity android:name=".views.activities.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data android:name="com.google.ar.core" android:value="optional"/>
    </application>

</manifest>